{
  "expo": {
    "name": "KrayWallet",
    "slug": "kraywallet-app-mobile",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.krayspace.kraywallet",
      "infoPlist": {
        "NSFaceIDUsageDescription": "KrayWallet uses Face ID for secure authentication",
        "NSCameraUsageDescription": "KrayWallet uses the camera to scan QR codes"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.krayspace.kraywallet",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "single"
    },
    "plugins": [
      "expo-secure-store"
    ],
    "extra": {
      "krayOsIntegration": true,
      "apiUrl": "https://kraywallet-backend.onrender.com"
    },
    "owner": "krayspace"
  }
}
